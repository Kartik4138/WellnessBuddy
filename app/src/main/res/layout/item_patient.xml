<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
    android:id="@+id/img_profile_patient"
    android:layout_width="38dp"
    android:layout_height="58dp"
    android:src="@drawable/profile_pic"
    android:scaleType="centerCrop"
    android:background="@drawable/bg_round_image"
    android:clipToOutline="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_name_pending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mr. Aryan"
        android:textSize="12sp"
        android:fontFamily="@font/inter"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_profile_patient"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_details_patient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="24 M"
        android:textSize="12sp"
        android:fontFamily="@font/inter"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tv_name_pending"
        app:layout_constraintStart_toEndOf="@id/img_profile_patient"
        android:layout_marginStart="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>