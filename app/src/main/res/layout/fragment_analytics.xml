<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.AnalyticsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_payment"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="62dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_transaction_gradient"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_hi_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Dr. Aditya!"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have 4 tasks today"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_hi_doctor"
                android:layout_marginTop="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/doctor_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/doctor"
        android:scaleType="fitCenter"
        android:layout_marginEnd="-18dp"
        android:layout_marginBottom="-26dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_payment"
        app:layout_constraintEnd_toEndOf="@id/cv_payment"
        android:elevation="10dp" />




</androidx.constraintlayout.widget.ConstraintLayout>
